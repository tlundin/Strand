<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding ="5dp" >

    <TextView
        android:id="@+id/strandappheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Strand V 0.9"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/filler_1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:gravity="center"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/lagnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lagnummer:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edit_lagnr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:digits="1234567890"
                android:ems="10"
                android:inputType="number"
                android:maxLength="5" >
            </EditText>
        </TableRow>

        <TableRow
            android:gravity="center"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/invent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventerare:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <EditText
                android:id="@+id/edit_invent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:minWidth="90dp" >
            </EditText>
        </TableRow>

        <TableRow
            android:gravity="center"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/valjruta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/rutaspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/valjprovyta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provyta:"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Spinner
                android:id="@+id/provytaspinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:gravity="center"
            android:paddingTop="10dp" >

            <LinearLayout
                android:id="@+id/exprdia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:background="@drawable/border"
                android:orientation="vertical"
                android:padding="10dip"
                android:visibility="invisible" >

                <TextView
                    android:id="@+id/pyID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Provyte ID: ?"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
                <LinearLayout
                    android:layout_margin="10dp"
                    android:orientation="horizontal"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                  <TextView
                    android:id="@+id/expressionMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                   
                    android:textAppearance="?android:attr/textAppearanceLarge" />                 
                    
                   <TextView
                    android:id="@+id/exprMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_marginLeft="10dp"
                     />    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/alternativSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp" />

                    <Button
                        android:id="@+id/startB"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:onClick="startCollect"
                        android:text="UtfÃ¶r"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                </LinearLayout>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>